<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MySerenity.App">
    <Application.Resources>
        <ResourceDictionary>

            <Color x:Key="MainBlueColor">DarkSlateBlue</Color>
            <Color x:Key="TextColor">White</Color>

            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource MainBlueColor}"></Setter>
                <Setter Property="TextColor" Value="{StaticResource TextColor}"></Setter>
            </Style>

            <Style TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource TextColor}"></Setter>
            </Style>

            <Style x:Key="Header" TargetType="Label">
                <Setter Property="FontSize" Value="60"></Setter>
                <Setter Property="HorizontalTextAlignment" Value="Center"></Setter>
            </Style>

            <Style x:Key="MiniHeader" TargetType="Label">
                <Setter Property="FontSize" Value="20"></Setter>
                <Setter Property="HorizontalTextAlignment" Value="Center"></Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>